<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.authentication.SignupActivity">

    <include layout="@layout/content_signup" />

    <EditText
        android:id="@+id/activity_signup_edit_username"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:ems="10"
        android:hint="@string/username_text"
        android:inputType="textNoSuggestions|textVisiblePassword"/>
    <EditText
        android:id="@+id/activity_signup_edit_password"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_signup_edit_username"
        android:padding="20dp"
        android:ems="10"
        android:hint="@string/password_text"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/activity_signup_edit_given_name"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_signup_edit_password"
        android:padding="20dp"
        android:ems="10"
        android:hint="@string/given_name_text"
        android:inputType="textNoSuggestions|textVisiblePassword"/>
    <EditText
        android:id="@+id/activity_signup_edit_email_address"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_signup_edit_given_name"
        android:padding="20dp"
        android:ems="10"
        android:hint="@string/email_address_text"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/activity_signup_edit_phone_number"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_signup_edit_email_address"
        android:padding="20dp"
        android:ems="10"
        android:hint="@string/phone_number_text"
        android:inputType="phone"/>
    <Button
        android:id="@+id/activity_signup_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_signup_edit_phone_number"
        android:layout_marginTop="15dp"
        android:background="#005ac8"
        android:textColor="@android:color/white"
        android:ems="10"
        android:text="@string/signup_text"/>

</RelativeLayout>
