<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageConfirmationLogo"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="center"
        android:background="#007acc"
        android:contentDescription="@string/app_name" />
    <EditText
        android:id="@+id/editConfirmationCode"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageConfirmationLogo"
        android:padding="20dp"
        android:ems="10"
        android:hint="@string/sign_up_confirm_code"
        android:inputType="textNoSuggestions|textVisiblePassword"/>
    <Button
        android:id="@+id/buttonConfirmationCodeSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editConfirmationCode"
        android:layout_margin="15dp"
        android:background="#005ac8"
        android:textColor="@android:color/white"
        android:ems="10"
        android:text="@string/sign_up_confirm_text"/>
</RelativeLayout>
